<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/listDivider"
        android:showDividers="middle">

        <TextView
            style="@style/CardTitleTextView"
            android:text="@string/misc_about_title"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/misc_about_text"/>
        
        <com.ztc1997.kernelhacker.view.PreferenceView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/misc_about_licenses"
            app:pv_title="@string/notices_title"/>
        
    </LinearLayout>

</android.support.v7.widget.CardView>