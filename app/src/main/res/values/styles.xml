<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MainActionBarStyle</item>
        <item name="actionBarTabTextStyle">@style/MainActionBarTabText</item>
        <item name="actionBarTabStyle">@style/MainActionBarTabs</item>
    </style>

    <style name="UpdateDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="MainActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/main_dark</item>
        <item name="backgroundStacked">@android:color/white</item>
    </style>
    <!-- ActionBar tabs text -->
    <style name="MainActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/main_dark</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MainActionBarTabs"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- Support library compatibility -->
        <item name="background">@color/main_dark</item>
    </style>
    
    <style name="TitleTextView" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/main_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    
</resources>
